<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workoutSearchFrag"
    android:orientation="horizontal">

    <!-- TODO: Update blank fragment layout -->

    <Toolbar
        android:id="@+id/toolbar_workout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:minHeight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="lollipop">

        <TextView
            android:id="@+id/textViewRelated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Related Workouts"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />


    </Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewWorkout11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_workout" />


</androidx.constraintlayout.widget.ConstraintLayout>