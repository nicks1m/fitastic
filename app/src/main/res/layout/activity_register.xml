<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fitastic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.082"
            app:layout_constraintVertical_bias="0.042"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:hint="Password" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/email" android:layout_marginBottom="28dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="220dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:hint="E-Mail" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/dateofbirth"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="292dp" android:autofillHints=""/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Username"
            android:ems="10"
            android:id="@+id/username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="20dp" app:layout_constraintBottom_toTopOf="@+id/password"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="152dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/dateofbirth"
            android:text="Date Of Birth" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnRegister"
            android:layout_marginBottom="52dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="364dp"/>
    <ImageButton
            android:layout_width="169dp"
            android:layout_height="121dp" app:srcCompat="@drawable/register_but" android:id="@+id/btnRegister"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="148dp" android:background="#00FFFFFF" android:onClick="userRegister"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/pwError"
            app:layout_constraintBottom_toTopOf="@+id/email"
            app:layout_constraintTop_toBottomOf="@+id/password" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Please input a stronger password" tools:visibility="invisible"
            android:visibility="invisible" android:textColor="#FF0000" android:autoText="false"
            android:password="false" android:textSize="10sp" app:layout_constraintHorizontal_bias="0.373"
    />
    <TextView
            android:text="E-mail is invalid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/mailError"
            app:layout_constraintBottom_toTopOf="@+id/dateofbirth"
            app:layout_constraintTop_toBottomOf="@+id/email" android:textColor="#FF0000" android:textSize="10sp"
            android:visibility="invisible" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.287"
            tools:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>