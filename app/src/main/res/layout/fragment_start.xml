<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/runLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".startFrag">

    <Button
        android:id="@+id/runEndButton"
        android:layout_width="83dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="124dp"
        android:background="@color/cyberYellow"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/cyberpunk"
        android:shadowColor="#C6C6C6"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="0.5"
        android:stateListAnimator="@null"
        android:text="End"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintStart_toEndOf="@+id/runStartBtn"
        app:layout_constraintTop_toBottomOf="@+id/map" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="407dp"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/runLogsBtn"
        tools:context=".MapsFragment" />

    <Button
        android:id="@+id/runStartBtn"
        android:layout_width="103dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="152dp"
        android:layout_marginLeft="152dp"
        android:background="@color/cyberRed"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/cyberpunk"
        android:shadowColor="#C6C6C6"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="0.5"
        android:stateListAnimator="@null"
        android:text="Run"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map"
        app:layout_constraintVertical_bias="0.371" />

    <Button
        android:id="@+id/runLogsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/cyberYellow"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/cyberpunk"
        android:shadowColor="#C6C6C6"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="0.5"
        android:stateListAnimator="@null"
        android:text="Logs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/runTimerView"
        android:layout_width="249dp"
        android:layout_height="43dp"
        android:textSize="20dp"
        android:textColor="@color/cyberYellow"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toTopOf="@+id/map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.428" />


</androidx.constraintlayout.widget.ConstraintLayout>