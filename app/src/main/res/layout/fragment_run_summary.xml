<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RunSummary">

    <TextView
        android:id="@+id/runSummaryTitle"
        android:layout_width="271dp"
        android:layout_height="122dp"
        android:fontFamily="sans-serif-light"
        android:text="Run Summary"
        android:textSize="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />

    <Button
        android:id="@+id/exitSummaryBtn"
        android:layout_width="146dp"
        android:layout_height="70dp"
        android:layout_marginBottom="52dp"
        android:background="#FFFFFF"
        android:text="Exit"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/distanceLabel"
        android:layout_width="97dp"
        android:layout_height="40dp"
        android:layout_marginBottom="36dp"
        android:text="Distance km"
        app:layout_constraintBottom_toTopOf="@+id/exitSummaryBtn"
        app:layout_constraintEnd_toStartOf="@+id/paceLabel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

   <TextView
        android:id="@+id/paceLabel"
        android:layout_width="97dp"
        android:layout_height="40dp"
        android:layout_marginTop="64dp"
        android:text="Average pace m/s"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/timeLabel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/distanceLabel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.709" />

     <TextView
        android:id="@+id/timeLabel"
        android:layout_width="97dp"
        android:layout_height="40dp"
        android:layout_marginBottom="36dp"
        android:text="Time elapsed min"
        app:layout_constraintBottom_toTopOf="@+id/exitSummaryBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/paceLabel" />

    <ImageView
        android:id="@+id/runImgPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="259dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/fui_idp_button_background_github"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateLabelRunSummary" />

    <TextView
        android:id="@+id/dateLabelRunSummary"
        android:layout_width="271dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:text="Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/runSummaryTitle" />

    <TextView
        android:id="@+id/pointsTextViewSummary"
        android:layout_width="94dp"
        android:layout_height="34dp"
        android:layout_marginTop="152dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toEndOf="@+id/dateLabelRunSummary"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>