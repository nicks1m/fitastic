<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RunSummary">


    <TextView
        android:id="@+id/runSummaryTitle"
        android:layout_width="321dp"
        android:layout_height="155dp"
        android:fontFamily="@font/cyberpunk"
        android:text="Run Summary"
        android:textColor="@color/cyberYellow"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055" />

    <TextView
        android:id="@+id/avgPaceSummary"
        android:layout_width="149dp"
        android:layout_height="53dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="52dp"
        android:text="Pace: "
        android:textColor="@color/cyberYellow"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avgDistanceSummary" />

    <TextView
        android:id="@+id/avgDistanceSummary"
        android:layout_width="149dp"
        android:layout_height="53dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="72dp"
        android:text="Distance: "
        android:textColor="@color/cyberYellow"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/runSummaryTitle" />

    <TextView
        android:id="@+id/avgTimeSummary"
        android:layout_width="149dp"
        android:layout_height="53dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="60dp"
        android:text="Time: "
        android:textColor="@color/cyberYellow"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avgPaceSummary" />

    <Button
        android:id="@+id/exitSummaryBtn"
        android:layout_width="179dp"
        android:layout_height="94dp"
        android:background="@color/cyberRed"
        android:fontFamily="@font/cyberpunk"
        android:text="Exit"
        android:textColor="@color/cyberYellow"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avgTimeSummary" />


</androidx.constraintlayout.widget.ConstraintLayout>