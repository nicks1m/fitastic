<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBG"
    tools:context=".profileFrag">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="600dp">

                <TextView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="IMG"
                    app:layout_constraintEnd_toEndOf="@+id/displayPic"
                    app:layout_constraintStart_toStartOf="@+id/displayPic"
                    app:layout_constraintTop_toTopOf="@+id/displayPic" />

                <TextView
                    android:id="@+id/display_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="78dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal|center_vertical"
                    android:shadowColor="@color/challengeGrey"
                    android:shadowDx="0"
                    android:shadowDy="3"
                    android:shadowRadius="2"
                    android:text="Name"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toTopOf="@+id/label_runs"
                    app:layout_constraintStart_toStartOf="@+id/label_runs"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <Button
                    android:id="@+id/btn_settings"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_marginEnd="21dp"
                    android:layout_marginRight="21dp"
                    android:background="@android:drawable/ic_menu_manage"
                    app:layout_constraintBaseline_toBaselineOf="@+id/btn_logout"
                    app:layout_constraintEnd_toStartOf="@+id/btn_points"
                    app:layout_constraintStart_toEndOf="@+id/btn_logout" />

                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="19dp"
                    android:layout_marginRight="19dp"
                    android:layout_marginBottom="48dp"
                    android:background="@android:drawable/ic_lock_power_off"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btn_settings"
                    app:layout_constraintStart_toEndOf="@+id/btn_friends"
                    app:layout_constraintTop_toBottomOf="@+id/data_pace" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:text="United Kingdom"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="@+id/display_name"
                    app:layout_constraintTop_toBottomOf="@+id/display_name" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="63dp"
                    android:layout_marginEnd="131dp"
                    android:layout_marginRight="131dp"
                    android:fontFamily="sans-serif-light"
                    android:text="statistics of"
                    android:textColor="#151515"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toTopOf="@+id/display_name"
                    app:layout_constraintEnd_toStartOf="@+id/displayPic"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/displayPic"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="33dp"
                    android:layout_marginRight="33dp"
                    android:layout_marginBottom="7dp"
                    android:adjustViewBounds="false"
                    android:background="#5CC1BFBF"
                    android:scaleType="fitXY"
                    android:src="@drawable/border"
                    app:layout_constraintBottom_toTopOf="@+id/textView15"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_points"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="162dp"
                    android:layout_marginRight="162dp"
                    android:background="@drawable/points"
                    app:layout_constraintBottom_toBottomOf="@+id/btn_logout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btn_settings"
                    app:layout_constraintTop_toTopOf="@+id/btn_settings" />

                <Button
                    android:id="@+id/btn_friends"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/ic_baseline"
                    app:layout_constraintBottom_toBottomOf="@+id/btn_logout"
                    app:layout_constraintEnd_toStartOf="@+id/btn_logout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/btn_logout" />

                <TextView
                    android:id="@+id/label_dist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="total distance"
                    android:textColor="#040404"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/data_dist"
                    app:layout_constraintStart_toStartOf="@+id/data_dist"
                    app:layout_constraintTop_toBottomOf="@+id/data_runs" />

                <TextView
                    android:id="@+id/label_runs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="no. of runs"
                    android:textColor="#040404"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/data_runs"
                    app:layout_constraintStart_toStartOf="@+id/data_runs"
                    app:layout_constraintTop_toBottomOf="@+id/display_name" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="longest run"
                    android:textColor="#040404"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/data_longest"
                    app:layout_constraintStart_toStartOf="@+id/data_longest"
                    app:layout_constraintTop_toBottomOf="@+id/data_dist" />

                <TextView
                    android:id="@+id/label_pace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="avg pace"
                    android:textColor="#040404"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/data_pace"
                    app:layout_constraintStart_toStartOf="@+id/data_pace"
                    app:layout_constraintTop_toBottomOf="@+id/data_longest" />

                <TextView
                    android:id="@+id/data_pace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="31dp"
                    android:fontFamily="sans-serif-light"
                    android:text='4"53'
                    android:textColor="#040404"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/btn_logout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/label_pace" />

                <TextView
                    android:id="@+id/data_longest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-light"
                    android:text="21km"
                    android:textColor="#040404"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/label_pace"
                    app:layout_constraintStart_toStartOf="@+id/label_pace"
                    app:layout_constraintTop_toBottomOf="@+id/textView19"
                    tools:textColor="#000000" />

                <TextView
                    android:id="@+id/data_runs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="22dp"
                    android:fontFamily="sans-serif-light"
                    android:text="27"
                    android:textColor="#040404"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/label_dist"
                    app:layout_constraintStart_toStartOf="@+id/label_dist"
                    app:layout_constraintTop_toBottomOf="@+id/label_runs" />

                <TextView
                    android:id="@+id/data_dist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="29dp"
                    android:fontFamily="sans-serif-light"
                    android:text="108km"
                    android:textColor="#040404"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/textView19"
                    app:layout_constraintStart_toStartOf="@+id/textView19"
                    app:layout_constraintTop_toBottomOf="@+id/label_dist" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp">

            </com.github.mikephil.charting.charts.LineChart>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="sans-serif-light"
                android:text="past 7 runs"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/data_7runs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btn_runLog"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="#FFFFFF"
                android:fontFamily="sans-serif-light"
                android:text="Run History >" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>