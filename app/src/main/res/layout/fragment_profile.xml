<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBG"
    tools:context=".profileFrag">

    <ImageView
        android:id="@+id/displayPic"
        android:layout_width="122dp"
        android:layout_height="103dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:adjustViewBounds="false"
        android:background="#5CC1BFBF"
        android:scaleType="fitXY"
        android:src="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="58dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal|center_vertical"
        android:shadowColor="@color/challengeGrey"
        android:shadowDx="0"
        android:shadowDy="3"
        android:shadowRadius="2"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="21km"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/textView19"
        tools:textColor="#000000" />

    <TextView
        android:id="@+id/label_dist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:fontFamily="sans-serif-thin"
        android:text="Total Distance"
        android:textColor="#626262"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/label_runs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/label_runs" />

    <TextView
        android:id="@+id/data_dist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="sans-serif-light"
        android:text="108km"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="@+id/label_dist"
        app:layout_constraintTop_toBottomOf="@+id/label_dist" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif-thin"
        android:text="Longest Run"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/data_dist"
        app:layout_constraintTop_toBottomOf="@+id/data_dist" />

    <TextView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMG"
        app:layout_constraintBottom_toBottomOf="@+id/displayPic"
        app:layout_constraintEnd_toEndOf="@+id/displayPic"
        app:layout_constraintStart_toStartOf="@+id/displayPic"
        app:layout_constraintTop_toTopOf="@+id/displayPic" />

    <Button
        android:id="@+id/btn_friends"
        android:layout_width="47dp"
        android:layout_height="46dp"
        android:layout_marginEnd="328dp"
        android:layout_marginRight="328dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/ic_baseline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:background="@android:drawable/ic_lock_power_off"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_settings"
        app:layout_constraintEnd_toEndOf="@+id/btn_points"
        app:layout_constraintStart_toStartOf="@+id/btn_points" />

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="38dp"
        android:background="@android:drawable/ic_menu_manage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_friends"
        app:layout_constraintStart_toStartOf="@+id/btn_friends"
        app:layout_constraintTop_toBottomOf="@+id/btn_friends" />

    <Button
        android:id="@+id/btn_points"
        android:layout_width="47dp"
        android:layout_height="49dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginEnd="65dp"
        android:layout_marginRight="65dp"
        android:background="@drawable/points"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_friends"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_friends" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="64dp"
        android:fontFamily="sans-serif-thin"
        android:text="Statistics"
        android:textColor="#B3AFAF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/label_pace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-thin"
        android:text="Avg\ Pace"
        android:textColor="#626262"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data_runs" />

    <TextView
        android:id="@+id/data_runs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-light"
        android:text="27"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="@+id/label_runs"
        app:layout_constraintTop_toBottomOf="@+id/label_runs" />

    <TextView
        android:id="@+id/data_pace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text='4"53'
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="@+id/label_pace"
        app:layout_constraintTop_toBottomOf="@+id/label_pace" />

    <TextView
        android:id="@+id/label_runs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-thin"
        android:text="No. of Runs"
        android:textColor="#626262"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-thin"
        android:text="United Kingdom"
        android:textColor="#AAA8A8"
        app:layout_constraintStart_toStartOf="@+id/display_name"
        app:layout_constraintTop_toBottomOf="@+id/display_name" />

    <Button
        android:id="@+id/btn_runLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginEnd="102dp"
        android:layout_marginRight="102dp"
        android:layout_marginBottom="27dp"
        android:text="Run History"
        app:layout_constraintBottom_toTopOf="@+id/btn_friends"
        app:layout_constraintEnd_toEndOf="@+id/btn_points"
        app:layout_constraintStart_toStartOf="@+id/data_pace" />


</androidx.constraintlayout.widget.ConstraintLayout>