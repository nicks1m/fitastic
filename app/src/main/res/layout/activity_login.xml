<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cyberpunk"
        android:rotation="-10"
        android:text="FITASTIC"
        android:textColor="@color/cyberRed"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.365"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146" />

    <Button
        android:id="@+id/btn_goto_register"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/custom_button_light_blue_bg"
        android:fontFamily="@font/cyberpunk"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.84000003" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/custom_button_light_red_bg"
        android:fontFamily="@font/cyberpunk"
        android:shadowColor="#FFFFFF"
        android:shadowDx="20"
        android:shadowDy="20"
        android:shadowRadius="30"
        android:text="Login"
        app:layout_constraintBottom_toTopOf="@+id/btn_goto_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.93" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/arrow"
        android:drawableRight="@drawable/arrow_r"
        android:ems="10"
        android:background="#27BCBABA"
        android:fontFamily="@font/play_regular"
        android:gravity="center_horizontal"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/mainFont"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="#52F8FF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#27BCBABA"
        android:drawableLeft="@drawable/arrow"
        android:drawableRight="@drawable/arrow_r"
        android:ems="10"
        android:fontFamily="@font/play_regular"
        android:gravity="center_horizontal"
        android:hint="E-mail"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/mainFont"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="#52F8FF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="130dp"
        android:layout_marginBottom="70dp"
        android:fontFamily="@font/cyberpunk"
        android:text="Forget Password?"
        android:textColor="@color/cyberYellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_goto_register" />

</androidx.constraintlayout.widget.ConstraintLayout>