
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

   <PreferenceCategory
       android:title="Enable Night Mode">

       <CheckBoxPreference
           android:title="Night Mode"
           android:key="NIGHT"
           android:defaultValue="false"
           android:summaryOn="Night Mode is activated"
           android:summaryOff="Night Mode is deactivated" />


   </PreferenceCategory>

    <PreferenceCategory
        android:title="Change Weight">
        <EditTextPreference
            android:title="Current Weight"
            android:summary="Update your weight"
            android:key="WEIGHT"
            />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Change Height">
        <EditTextPreference
            android:title="Current Height"
            android:summary="Update your height"
            android:key="HEIGHT"
            />
    </PreferenceCategory>

</PreferenceScreen>

